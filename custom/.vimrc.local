let g:clang_format#detect_style_file = 1
func! FormatSrc()
  exec "w"
  if &filetype == 'c'
    exec "!astyle --style=java -xC120 -o -O -n -k3 %"
  elseif &filetype == 'cpp' || &filetype == 'hpp'
    exec "!astyle --style=java -xC121 -o -O -n -k3 %"
  elseif &filetype == 'perl'
    exec "!astyle --style=gnu -xC120 -o -O -n %"
  elseif &filetype == 'py'||&filetype == 'python'
    exec "!autopep8 --max-line-length 120 -i --aggressive %"
  elseif &filetype == 'cs'
    exec "!astyle --style=java -xC120 -o -O -n %"
  elseif &filetype == 'java'
    exec "!astyle --style=java -xC120 -o -O -n %"
  elseif &filetype == 'jsp'
    exec "!astyle --style=gnu -xC120 -o -O -n %"
  elseif &filetype == 'xml'
    exec "!astyle --style=gnu -xC120 -o -O -n %"
  endif
  exec "e! %"
endfunc

